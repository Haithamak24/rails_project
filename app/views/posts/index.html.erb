<h1>All Posts</h1>
<ul>
  <% @posts.each do |post| %>
    <li>
      <strong><%= post.title %></strong>: <%= post.content %>
      <ul>
        <h3>Comments:</h3>
        <% post.comments.each do |comment| %>
          <li><%= comment.content %></li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>
